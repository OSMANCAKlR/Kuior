{% javascript %}
 document.addEventListener("DOMContentLoaded", function() {
    // Function to check if the window size is below 856px
    function isMobileView() {
        return window.innerWidth < 857;
    }

    // Select all choices and results
    const choices = document.querySelectorAll('.mobile__choice .choice');
    const results = document.querySelectorAll('.results__container .result');

    // Function to remove active class from all choices
    function removeActiveClasses() {
        choices.forEach(choice => {
            choice.classList.remove('active');
        });
    }

    // Function to hide all results
    function hideAllResults() {
        results.forEach(result => {
            result.style.display = 'none';
        });
    }

    // Function to set the default active choice and result
    function setDefaultActive() {
        if (isMobileView()) {
            removeActiveClasses();
            hideAllResults();

            // Set the second choice as active
            choices[0].classList.add('active');

            // Show the corresponding result
            if (results[1]) {
                results[1].style.display = 'flex';
            }
        }
    }

    // Add click event listener to each choice
    choices.forEach((choice, index) => {
        choice.addEventListener('click', () => {
            if (isMobileView()) {
                removeActiveClasses();
                hideAllResults();

                // Add active class to clicked choice
                choice.classList.add('active');

                // Show corresponding result (index + 1 because first result is related to the second choice)
                if (results[index + 1]) {
                    results[index + 1].style.display = 'flex';
                }
            }
        });
    });

    // Set default active choice and result on load
    setDefaultActive();

    // Adjust default choice and result on window resize
    window.addEventListener('resize', setDefaultActive);
});

{% endjavascript %}


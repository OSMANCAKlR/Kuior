    }
    .results__title {
      color: var(--Text, #242424);
      text-align: left;
      font-family: Glorify;
      font-size: 30px;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
      margin-bottom: 8.64px;
    }

    .results__para {
      color: var(--Text, #242424);
      text-align: left;
      font-family: Open Sans;
      font-size: 14px;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
      max-width: 564px;
    }

    .result {
      width: 100%;
    }

    .mobile_line {
    height: 0px;
  }
  }



<footer class="footer">
  <div class="footer__wrapper">
    <div class="footer__top">
      <div class="newsletter__wrapper">
      <div class="footer-column--nav">
        <li class="footer__list--navigation">
          <h3 class="footer__header"> <span class="yellow">Never</span> miss out on new deliveries</h3>
          {% form 'customer', id: 'footer-newsletter' %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="sucscribeletter__email--container">
              <input
                class="suscribeletter__email--input"
                name="contact[email]"
                type="email"
                placeholder="Email address"
              >
              <button class="subscribeletter__button" type="submit">Subscribe</button>
            </div>
            {% if form.posted_successfully? %}
              <p class="footer-column-news-message">Thank you for subscribing!</p>
            {% endif %}
            {% if form.errors %}
              <p class="footer-column-news-message">{{ form.errors.messages.email }}</p>
            {% endif %}
          {% endform %}
        </li>
      </div>
      </div>
       <div class="nav_links"> 
      {% for block in section.blocks %}
        {% if block.type == 'navigation' %}
          <div class="footer_column footer-column--nav">
            <h2 class="footer__nav--title">{{ block.settings.linklist.title }}</h2>
            {% for link in block.settings.linklist.links %}
              <li class="footer__list--navigation">
                <a class="footer__link" href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endfor %}
          </div>
        {% elsif block.type == 'text' %}
          <div class="footer-column footer-column--text">
            <h2>{{ block.settings.heading }}</h2>
            {{ block.settings.text }}
          </div>
        {% endif %}
      {% endfor %}
       </div>
    </div>

    <div class="footer-bottom">
      <p class="copyright__text">Copyright Â© 2023 Kuoir</p>
      <div class="footer__socials--container">
          {% comment %} <a  href="{{ section.settings.insta_link }}"
            target="_blank"
            class="social__link">
            <img src="https://cdn.shopify.com/s/files/1/0801/6599/4812/files/instagram_logo.svg?v=1693128956" class="social__icon">
          </a>
            <a  href="{{ section.settings.facebook_link }}"
            target="_blank"
            class="social__link">
            <img src="https://cdn.shopify.com/s/files/1/0801/6599/4812/files/facrbook.svg?v=1693129053" class="social__icon">
          </a>
           <a  href="{{ section.settings.tiktok_link }}"
            target="_blank"
            class="social__link">
            <img src="https://cdn.shopify.com/s/files/1/0801/6599/4812/files/tiktok.svg?v=1693129221" class="social__icon">
          </a> {% endcomment %}
      </div>
    </div>
  </div>
</footer>


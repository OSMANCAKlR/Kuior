                .carousel-container {
                    position: relative;
                   margin: 58px auto 0;
                }
                .carousel-slide {
          display: flex;
          overflow: hidden;
          transition: transform 0.3s ease-in-out; /* Add a transition for smooth sliding */
          justify-content: space-evenly;
        }
                .carousel-box {
                    width: 90%;
                    text-align: center;
                    box-sizing: border-box;
                }
                .carousel-arrows {
                    display: flex;
                    justify-content: space-between;
                    margin-top: 34px;
                }
                .carousel-dots {
                    display: flex;
                    justify-content: center;
                }
                .dot {
                    width: 10px;
                    height: 10px;
                    background-color: rgba(0, 86, 55, 0.40);
                    border-radius: 50%;
                    margin: 0 5px;
                    cursor: pointer;
                }
    
                .dot.active {
                    background-color: #005637;
                }
    
                .row {
                  width: 100%;
                  max-width: 1090px;
                  margin: 0 auto;
                  align-items: center;

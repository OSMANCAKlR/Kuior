              }
    
              .box__price--container {
                display: flex;
                flex-direction: column;
                    align-items: flex-start;
                gap: 4px;
              }
    
              .product__price--original {
                color: rgba(36, 36, 36, 0.70);
                text-align: center;
                font-family: Inter;
                font-size: 15.492px;
                font-style: normal;
                font-weight: 600;
                line-height: normal;
                text-decoration: line-through;
              }
    

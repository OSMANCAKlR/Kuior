{% stylesheet %}
   .announcement__container {
      background:  #5B6240;
      color: #FFF6EB;
      display: flex;
      justify-content: center;
      gap: 40px;
     padding: 8px 0px;
    }

    .announcement {
      display: flex;
      gap: 10px;
      align-items: center;
    }

    .annoucment__img {
      width: 24px;
    }

    .annoucement__span {
      color: var(--Cream, #FFF6EB);
      font-size: 12px;
      font-style: normal;
      font-weight: 600;
      line-height: normal;
    }


@media screen and (max-width:700px) {
      .announcement:nth-child(2),
    .announcement:nth-child(3) {
    display: none;
}
}
{% endstylesheet %}

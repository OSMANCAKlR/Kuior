{% schema %}
{
  "name": "Ajax Header",
  "tag": "section",
  "class": "section",
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Ajax Header",
      "category": "Custom"
    }
  ]
}
{% endschema %}



{% stylesheet %}
  .form__container {
  position: relative;
  max-width: 300px; /* Adjust as necessary */
  margin: 0 auto;
}

.search-form {
  display: flex;
  border: 1px solid #ccc; /* Light grey border */
  border-radius: 20px; /* Rounded corners */
}

.search-input {
  flex-grow: 1;
  border: none;
  padding: 10px 20px;
  font-size: 16px; /* Adjust as necessary */
}

.search-input:focus {
  outline: none;
}

.search-button {
  background: url('path-to-search-icon.png') no-repeat center; /* Add your search icon here */
  border: none;
  width: 40px; /* Adjust as necessary */
  cursor: pointer;
}

.search-results {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: white;
  box-shadow: 0 6px 12px rgba(0,0,0,.175); /* Bootstrap-style dropdown shadow */
  border: 1px solid #ccc;
  border-top: none;
  z-index: 1000; /* Ensure it's above other content */
  display: none; /* Hide by default */
}

.search-results.active {
  display: block; /* Show when active */
}

/* Style for individual search result items, adjust as needed */
.search-results-item {
  padding: 10px 20px;
  border-bottom: 1px solid #eee;
  cursor: pointer;
}

.search-results-item:last-child {
  border-bottom: none;
}

.search-results-item:hover {
  background-color: #f7f7f7;
}
{% endstylesheet %}

<nav>
  <div class="page-width">
    <div class="nav__container">
      <div class="nav__links"></div>
      <figure>
        <img src="" alt="">
      </figure>
      <div class="nav__icons">
        <div class="form__container">
          <form action="{{ routes.search_url }}" class="search-form">
            <input
              type="text"
              class="search-input"
              placeholder="Search"
              name="q"
              value="{{ search.terms | escape }}"
              autocomplete="off"
              onkeyup="searchProducts(this.value)"
            >
            <input type="submit" class="search-button" value="">
          </form>
          <div id="searchResults" class="search-results"></div>
        </div>
      </div>
    </div>
  </div>
</nav>



<script> 
function searchProducts(value) {
  // Assume you have a function to get search results
  getSearchResults(value).then(results => {
    const searchResultsContainer = document.getElementById('searchResults');
    searchResultsContainer.innerHTML = ''; // Clear previous results
    results.forEach(item => {
      const div = document.createElement('div');
      div.className = 'search-results-item';
      div.textContent = item.title; // Adjust to use your actual result properties
      searchResultsContainer.appendChild(div);
    });
    if(results.length > 0) {
      searchResultsContainer.classList.add('active');
    } else {
      searchResultsContainer.classList.remove('active');
    }
  });
}
</script>